{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": ["DOM", "ES2022"],
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "types": ["vite/client", "laravel-vite-plugin/client", "./resources/types/generated"]
    },
    "include": ["resources/js", "resources/types"],
    "exclude": ["node_modules", "vendor", "public"]
}

